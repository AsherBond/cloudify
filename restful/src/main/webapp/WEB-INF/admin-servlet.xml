			<value>${security.propagation}</value>
		</constructor-arg>
	</bean> -->

	<mvc:annotation-driven />
	<mvc:resources mapping="/resources/**" location="/resources/" />

	<context:component-scan base-package="org.cloudifysource.rest" />

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<mvc:view-controller path="/" view-name="index" />

	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver" />

	<bean id="admin" class="org.cloudifysource.rest.util.AdminFactoryBean">
        <property name="groups" value="${restful.lookupGroup}"/>
        <property name="locators" value="${restful.lookupLocator}"/>
	</bean>


